BasedOnStyle: LLVM

# 4 spaces indentation.
UseTab: Never
IndentWidth: 4
TabWidth: 4

# Keep access modifiers left, aligned with `class`.
AccessModifierOffset: -4
# Keep case labels (for switch blocks) left, aligned with `switch`.
IndentCaseLabels: false

# Always indent in namespaces.
NamespaceIndentation: All
# Do not modify namespace end comments.
# Namespace end comments restate the namespace name at the end of a namespace.
FixNamespaceComments: false

# Do not break before braces.
# Do break before catch or else.
BreakBeforeBraces: Custom
BraceWrapping:
  BeforeCatch: true
  BeforeElse: true

# If bracket elements (function params, function args, lists) do not fit on
# a single line, break after opening and before closing bracket (like a block).
AlignAfterOpenBracket: BlockIndent
# If elements still cannot fit on one line, give each element a new line.
BinPackArguments: false

# If-statements without braces must have a line break and never be on one line.
AllowShortIfStatementsOnASingleLine: Never

# Functions that can fit on one line may only do so within class definitions.
# All other functions must have a line break after the opening brace.
AllowShortFunctionsOnASingleLine: Inline

# Keep the star next to the type; use `T* t`, never `T *t` or `T * t`.
PointerAlignment: Left

# Restrict column limits (line length limits) to 80 characters max.
ColumnLimit: 80
